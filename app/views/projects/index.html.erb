<p id="notice"><%= notice %></p>

<h1 id="listing_page_header">My Projects Listed by Most Recent</h1><hr>

<br>
<% @projects.each do |project| %>
  <%= link_to project do %>
    <div class="listing">
      <h3 class="sliding-u-l-r-l"><%=project.title%></h3><br>
      <%= image_tag project.image.url,class:"listing_pic d-flex ml-3" %>
      <p><%= truncate(project.description, :length => 150)%></p>
    </div>
  <%end%>
<% end %>
<%= link_to 'New Project', new_project_path %>
