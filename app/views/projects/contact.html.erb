<div id="header">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li><a href="/projects">Projects</a></li>
        <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
        <li class="active"><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>
</div>

<div class="container">
  <h1 id="contact_header">Send Me a Message</h1>
  <div id="contact_form" class="animated lightSpeedIn">
    <%= bootstrap_form_tag(url: '/send-mail', layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
      <div class="form-group">
        <%= f.text_area :message, class:"message_area",data: { validation: 'length',validation_length:"min1",validation_help:"Message to Me"}, label: "Your Message*"  %>
      </div>
      <div class="form-group">
        <%= f.text_area :from, class:"return_area",data: {validation_help:"optional email for me to reply to"}, label: "Return Email"  %>
      </div>
      <div class="actions">
        <%= f.submit "Send" %>
      </div>
    <% end %>
  </div>
</div>

<script>
$.validate({
  lang: 'en',
  modules : 'security',
  onSuccess : function($form) {

  },
  onError : function($form) {
    sweetAlert("Opps!", "Something Was Wrong", "warning");
    return false; // IF FALSE Will stop the submission of the form
  }
});
</script>
