<div class="container">
  <h1>Send Me a Message</h1>
  <div id="contact_form">
    <%= bootstrap_form_tag(url: '/send-mail', layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
      <div class="form-group">
        <%= f.text_area :message, class:"message_area",data: { validation: 'length',validation_length:"min1",validation_help:"Message to Me"}, label: "Your Message*"  %>
      </div>
      <div class="form-group">
        <%= f.text_area :from, class:"return_area",data: {validation_help:"optional email for me to reply to"}, label: "Return Email"  %>
      </div>
      <div class="actions">
        <%= f.submit "Send" %>
      </div>
    <% end %>
  </div>
</div>

